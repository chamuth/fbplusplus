{
  "name": "facebookpp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "webpack": "webpack",
    "webpack:watch": "webpack --watch",
    "scss:watch": "node-sass \"./src/styles.scss\" \"./dist/styles.css\" --watch",
    "scss:build": "node-sass \"./src/styles.scss\" \"./dist/styles.css\"",
    "src:copy": "cpx \"./manifest.json\" \"./dist/\" && cpx \"./src/images/**.*\" \"./dist/images\"",
    "dev": "npm run build && concurrently npm:webpack:watch npm:scss:watch",
    "start": "npm run dev",
    "build": "webpack && npm run scss:build && npm run src:copy",
    "pack": "bestzip build.zip dist/"
  },
  "keywords": [],

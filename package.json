  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "@types/node": "^18.6.1",
    "bestzip": "^2.2.1",
    "concurrently": "^7.3.0",
    "cpx": "^1.5.0",
    "dotenv-webpack": "^8.0.0",
    "node-sass": "^7.0.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
